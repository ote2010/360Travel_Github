<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필터 적용하기"
        android:id="@+id/filterButton"
        android:layout_gravity="center_horizontal"
        android:background="#3498db"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="     2016.07.14"
        android:id="@+id/dateTextView"
        android:background="#1abc9c"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/storyItemLayout1"
            android:layout_weight = "1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp">

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/storyFrameLayout1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/storyImageView1"
                android:src="@drawable/testimg2"
                android:baselineAlignBottom="false"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/storyImageButton1"
                    android:layout_gravity="right|bottom"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9f9393"
                android:id="@+id/storyBackgroundLayout1">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/storyUserImage1"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="#f79797">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오탁은"
                        android:id="@+id/storyUserName1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숭실대 왔습니당"
                        android:id="@+id/storyTitle1"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/storyItemLayout2"
            android:layout_weight = "1"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="2dp">

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/storyFrameLayout2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/storyImageView2"
                android:src="@drawable/testimg1"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/storyImageButton2"
                    android:layout_gravity="right|bottom"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9f9393"
                android:layout_gravity="center_horizontal"
                android:id="@+id/storyBackgroundLayout2">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/storyUserImage2"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="#f79797">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오탁은"
                        android:id="@+id/storyUserName2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숭실대 왔습니당"
                        android:id="@+id/storyTitle2"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
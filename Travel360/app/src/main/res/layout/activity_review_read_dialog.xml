<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Review.ReviewReadDialog">


    <LinearLayout
        android:scaleType="fitStart"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_user_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"


            android:scaleType="fitStart"
            android:src="@drawable/img1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView

                android:id="@+id/dialog_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="오탁은"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/dialog_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="2016.07.22" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_datail_btn"
            android:layout_width="70dp"
            android:layout_height="match_parent"


            android:text="■" />

        <Button
            android:id="@+id/dialog_ad_traveler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:text="+트레블러 추가" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/external"
        android:layout_gravity="center_horizontal"
        android:background="#000000" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"


                android:text="평점"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <ImageView
                android:id="@+id/dialog_star"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"

                android:scaleType="fitStart"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/dialog_star_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="4.9"
                android:textAppearance="?android:attr/textAppearanceLarge" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/dialog_textview"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/my_border" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:id="@+id/ReviewComment"
                    android:layout_gravity="bottom|right"/>
            </FrameLayout>

            <Button

                android:id="@+id/dialog_close_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"

                android:text="닫기" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>


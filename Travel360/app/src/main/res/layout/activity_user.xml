<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.travel360.UserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userLogLayout"></LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/reviewAndStoryContainer"
        android:layout_above="@+id/scrollView">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="여행기"
            android:id="@+id/button7" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button7"
            android:text="리뷰"
            android:id="@+id/button8" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/userContainer"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/reviewAndStoryContainer">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|top"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/testimg2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/hwiin"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="정휘인"
            android:id="@+id/textView"
            android:layout_marginLeft="120dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginStart="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginStart="40dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="트레블러 추가"
            android:id="@+id/button2"
            android:layout_alignBottom="@+id/button"
            android:layout_toEndOf="@+id/button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="상태메시지"
            android:id="@+id/textView2"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="@+id/textView2"
            android:text="40명"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignEnd="@+id/textView2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentTop="@+id/textView2"
            android:id="@+id/imageView9"
            android:src="#b12929"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30000"
            android:layout_alignParentTop="@+id/textView2"
            android:id="@+id/textView6"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView9" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView6"
            android:src="#f609ce" />


    </RelativeLayout>

</RelativeLayout>
